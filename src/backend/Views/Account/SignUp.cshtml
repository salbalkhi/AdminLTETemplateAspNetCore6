@model Tadawi.Models.UserRegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tadawi | Registration Page</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/WebCore/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/WebCore/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/WebCore/dist/css/adminlte.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/WebCore/plugins/toastr/toastr.min.css">
</head>
<body class="hold-transition register-page">
<div class="register-box">
    <div class="register-logo">
        <b>Tadawi</b>Portal
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="SignUp" asp-id="SignUp" id="SignUp">
            
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="UserName" name="UserName" placeholder="UserName">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="PhoneNumber" name="PhoneNumber" placeholder="PhoneNumber">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="FirstName" name="FirstName" placeholder="FirstName">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" asp-for="LastName" name="LastName" placeholder="LastName">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="email" class="form-control" asp-for="Email" name="Email" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                            <label for="agreeTerms">
                                I agree to the <a href="/Home/Terms">terms</a>
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                    <!-- /.col -->
                </div>
            
            </form>

     
            <a href="/Account/Login" class="text-center">I already have a membership</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="~/WebCore/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/WebCore/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- jquery-validation -->
<script src="~/WebCore/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/WebCore/plugins/jquery-validation/additional-methods.min.js"></script>
<!-- Tadawi App -->
<script src="~/WebCore/dist/js/adminlte.min.js"></script>
<!-- SweetAlert2 -->
<script src="~/WebCore/plugins/sweetalert2/sweetalert2.min.js"></script>
<!-- Toastr -->
<script src="~/WebCore/plugins/toastr/toastr.min.js"></script>
</body>
</html>

@if (ViewBag.Message != null)
{
    <script>toastr.error('@ViewBag.Message')</script>
}


